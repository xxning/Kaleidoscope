import java.awt.Color;
public class practice {
	
	public static void main(String[] args) {
	
	        int N=StdIn.readInt();
	        ball balls[]=new ball[N];
	        for(int i=0;i<N;i++){
	        	balls[i]=new ball();
	        }
	        while(true){
	        	StdDraw.clear();
	        	for(int i=0;i<N;i++){
	        		balls[i].move();
	        		balls[i].draw();
	        	}
	        	StdDraw.show(20);
	        }
	        
	}      
   
		          	       	     
}

